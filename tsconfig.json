{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "outDir": "dist",
      "sourceMap": true,
      "removeComments": true,
      "declaration": true,
      "moduleResolution": "node",
      "typeRoots": [
        "node_modules/@types"
      ],
      "noUnusedLocals": true,
      "resolveJsonModule": true
    },
    "include": [
      "./lib/**/*.ts"
    ],
    "exclude": [
      "./node_modules",
      "dist"
    ]
  }